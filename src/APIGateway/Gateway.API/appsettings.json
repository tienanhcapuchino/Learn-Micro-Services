{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "CoreDbConnectStr": "Server=localhost;Port=5432;Database=Learn_Micro_Services;User Id=postgres;Password=demo12!@;Timeout=300;CommandTimeout=300;"
  },
  "ReverseProxy": {
    "Routes": {
      "common-route": {
        "ClusterId": "common-cluster",
        "Match": {
          "Path": "common-api/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      }
